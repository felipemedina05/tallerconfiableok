@model VehiculoModelo
@{
    ViewData["Title"] = "Eliminar Vehiculo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar Vehiculo</h1>

<div class="card">
    <div class="card-header">
        Eliminar Vehiculo
    </div>
    <div class="card-body">

        <form asp-action="Eliminar" asp-controller="MantenedorVehiculo" method="post">

            <input asp-for="Idvehiculo" type="hidden" class="form-control">

            <div class="alert alert-danger" role="alert">
                ¿Desea eliminar el Vehiculo : @Html.DisplayTextFor(m => m.Nombre) ?
            </div>



            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Listar" asp-controller="MantenedorVehiculo" class="btn btn-warning">Voler a la lista</a>
        </form>


    </div>
